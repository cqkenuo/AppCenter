<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="16dp"
        android:text="@string/getback_password_tips"
        android:textColor="@color/light_black"
        android:textSize="@dimen/font_size_14sp"/>

    <EditText
        android:id="@+id/et_new_pwd"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/tv_tips"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/border_left_top_right_bottom"
        android:dropDownHorizontalOffset="0dp"
        android:dropDownSelector="@color/white"
        android:dropDownVerticalOffset="0dp"
        android:fadingEdge="none"
        android:hint="请输入新密码"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:paddingBottom="10dp"
        android:paddingLeft="17dp"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:textColor="@color/app_name_color"
        android:textColorHint="#bbbbbb"
        android:textSize="@dimen/font_size_14sp"/>

    <CheckBox
        android:id="@+id/iv_eye"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_above="@+id/et_password"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="13dp"
        android:layout_marginRight="16dp"
        android:paddingRight="6dp"
        android:layout_marginTop="13dp"
        android:enabled="false"
        android:scaleType="centerInside"
        android:button="@drawable/eye_selector"
        android:background="@drawable/sc_btn_default"
        android:visibility="visible"
        />

    <ImageView
        android:id="@+id/iv_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/iv_eye"
        android:layout_alignTop="@id/et_new_pwd"
        android:layout_centerVertical="true"
        android:layout_marginBottom="13dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="13dp"
        android:src="@mipmap/input_del"
        android:visibility="invisible"
        />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/et_new_pwd"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/border_left_top_right_bottom"
        android:dropDownSelector="@color/white"
        android:hint="请再次输入新密码"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:paddingBottom="10dp"
        android:paddingLeft="17dp"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:textColor="@color/app_name_color"
        android:textColorHint="#bbbbbb"
        android:textSize="@dimen/font_size_14sp"/>

    <CheckBox
        android:id="@+id/iv_eye2"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_above="@+id/tv_submit"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="13dp"
        android:layout_marginRight="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="13dp"
        android:scaleType="centerInside"
        android:enabled="false"
        android:button="@drawable/eye_selector"
        android:background="@drawable/sc_btn_default"
        android:visibility="visible"
        />

    <ImageView
        android:id="@+id/iv_del2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/iv_eye2"
        android:layout_alignTop="@+id/et_password"
        android:layout_marginBottom="13dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="13dp"
        android:src="@mipmap/input_del"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/et_password"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/appdetail_downloadbar_selector"
        android:clickable="true"
        android:gravity="center"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="17sp"/>

</RelativeLayout>