<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <!-- 账号输入 -->

    <EditText
        android:id="@+id/et_account"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_left_top_right_bottom"
        android:dropDownHorizontalOffset="0dp"
        android:dropDownSelector="@color/white"
        android:dropDownVerticalOffset="0dp"
        android:fadingEdge="none"
        android:hint="请输入11位数电话号码"
        android:inputType="phone"
        android:imeOptions="actionNext"
        android:paddingBottom="10dp"
        android:paddingLeft="17dp"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:textColor="@color/app_name_color"
        android:textSize="@dimen/font_size_14sp"/>

    <ImageView
        android:id="@+id/iv_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@id/et_account"
        android:layout_alignTop="@id/et_account"
        android:layout_centerVertical="true"
        android:layout_marginBottom="13dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="13dp"
        android:src="@mipmap/input_del"
        android:visibility="invisible"
        />


    <TextView
        android:id="@+id/bt_getCode"
        android:layout_width="97dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/et_account"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:clickable="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/appdetail_downloadbar_selector"
        android:text="获取验证码"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_14sp"/>

    <EditText
        android:id="@+id/et_vertifyCode"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/et_account"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="14dp"
        android:layout_toLeftOf="@id/bt_getCode"
        android:background="@drawable/border_left_top_right_bottom"
        android:dropDownSelector="@color/white"
        android:hint="请输入验证码"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:paddingBottom="10dp"
        android:paddingLeft="17dp"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:textColor="@color/app_name_color"
        android:textSize="@dimen/font_size_14sp"/>

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/et_vertifyCode"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/appdetail_downloadbar_selector"
        android:clickable="true"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="17sp"/>


</RelativeLayout>