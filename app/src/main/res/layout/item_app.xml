<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:paddingBottom="15dp"
    android:paddingLeft="11dp"
    android:paddingRight="20dp"
    android:paddingTop="15dp">

    <cn.lt.android.main.download.DownloadButton
        android:id="@+id/download_button"
        android:layout_width="60dp"
        android:layout_height="23dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />
    <ImageView
        android:id="@+id/icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="9dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/app_default"/>


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/icon"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/icon"
        android:ellipsize="end"
        android:maxEms="9"
        android:singleLine="true"
        android:text="QQ增强版"
        android:textColor="@color/app_name_color"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/download_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/name"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="3000万次下载"
        android:textColor="@color/app_size_color"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/app_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_toRightOf="@id/download_count"
        android:layout_toLeftOf="@id/download_button"
        android:layout_centerVertical="true"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="23.1MB"
        android:textColor="@color/app_size_color"
        android:textSize="13sp"
        />

    <TextView
        android:id="@+id/app_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/name"
        android:layout_alignBottom="@id/icon"
        android:ellipsize="end"
        android:maxLength="30"
        android:singleLine="true"
        android:text="修仙游戏,超级好玩的欧系哦"
        android:textColor="@color/app_size_color"
        android:textSize="13sp"
        />



</RelativeLayout>
