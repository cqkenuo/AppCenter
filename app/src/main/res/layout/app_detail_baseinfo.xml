<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_left_top_right_bottom"
    >

    <RelativeLayout
        android:id="@+id/rl_app_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="18dp"
        android:paddingTop="18dp"
        >

    <!-- logo图片 -->

    <ImageView
        android:id="@+id/iv_app_logo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"/>
    <!-- 游戏名 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_app_logo"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="优购商城"
            android:textColor="#333333"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/tv_app_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="11dp"
            android:singleLine="true"
            android:text="装机必备"
            android:textColor="@color/gray_color"
            android:textSize="@dimen/font_size_12sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_app_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30M "
                android:textColor="@color/gray_color"
                android:textSize="@dimen/font_size_12sp"/>

            <TextView
                android:id="@+id/tv_download_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="30万人下载"
                android:textColor="@color/gray_color"
                android:textSize="@dimen/font_size_12sp"/>
        </LinearLayout>
    </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="14dp"
        android:background="@color/light_grey"
        android:layout_below="@+id/rl_app_head"
        />

    <TextView
        android:id="@+id/app_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="小编点评：符合都i微积分do诶付金额日哦家发改委方季惟分哦陪我过克哦"
        android:layout_below="@+id/view"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="@dimen/font_size_12sp"
        android:textColor="@color/tab_select_color"
        />
</RelativeLayout>