<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    >


    <TextView
        android:id="@+id/tab_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:singleLine="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="6dp"
        android:text="精选"
        android:textColor="@color/sc_grey_white_tab"
        />

    <ImageView
        android:id="@+id/app_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tab_text"
        android:layout_alignBottom="@id/tab_text"
        android:layout_toRightOf="@id/tab_text"
        android:layout_marginLeft="2dp"
        android:src="@mipmap/app_count"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/app_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/app_count"
        android:layout_alignBottom="@id/app_count"
        android:layout_alignLeft="@id/app_count"
        android:layout_alignRight="@id/app_count"
        android:textSize="9sp"
        android:gravity="center"
        android:textColor="@color/app_down_count_color"
        android:visibility="gone"/>

    <View
        android:id="@+id/tab_line"
        android:layout_width="28dp"
        android:layout_height="3dp"
        android:background="@drawable/rectangle_white_corner"
        android:layout_marginTop="6dp"
        android:layout_alignLeft="@id/tab_text"
        />
</RelativeLayout>